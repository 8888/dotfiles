[user]
  name = 8888
  email = leecostello1@gmail.com
[core]
  autocrlf = input
  editor = vi
  excludesfile = ~/.gitignore_global
  whitespace = cr-at-eol
[sequence]
  editor = code --wait
[pull]
  rebase = true
[init]
  defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

# Conditional includes for different environments
# Work
[includeIf "gitdir:~/Documents/work/"]
  path = ~/dotfiles/git/work.gitconfig
[includeIf "gitdir:~/Documents/code/rmd/"]
  path = ~/dotfiles/git/work.gitconfig

# Home (Optional specific overrides)
[includeIf "gitdir:~/Documents/personal/"]
  path = ~/dotfiles/git/home.gitconfig
