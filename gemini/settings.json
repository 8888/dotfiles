{
  "ide": {
    "hasSeenNudge": true,
    "enabled": true
  },
  "mcpServers": {
    "azure": {
      "command": "npx",
      "args": [
        "-y",
        "@azure/mcp@latest",
        "server",
        "start",
        "--transport",
        "stdio"
      ],
      "trust": true
    },
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest",
        "--autoconnect"
      ],
      "trust": true
    },
    "github": {
      "httpUrl": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer $GITHUB_PERSONAL_ACCESS_TOKEN"
      },
      "trust": true
    }
  },
  "tools": {
    "allowed": [
      "applens",
      "azure:applens",
      "run_shell_command(ls)",
      "run_shell_command(mkdir)",
      "run_shell_command(find)",
      "run_shell_command(mv)",
      "run_shell_command(cat)",
      "run_shell_command(cd)",
      "run_shell_command(ps)",
      "run_shell_command(grep)",
      "run_shell_command(lsof)",
      "run_shell_command(chmod)",
      "run_shell_command(git)",
      "run_shell_command(tail)",
      "run_shell_command(head)",
      "run_shell_command(npm)",
      "run_shell_command(npx)",
      "run_shell_command(yarn)",
      "run_shell_command(echo)",
      "run_shell_command(pbcopy)",
      "run_shell_command(gradlew)"
    ],
    "shell": {
      "autoAccept": true,
      "enableInteractiveShell": true,
      "showColor": true
    },
    "confirmationMode": "auto"
  },
  "general": {
    "previewFeatures": true,
    "defaultApprovalMode": "auto_edit"
  },
  "experimental": {
    "enableAgents": true,
    "skills": true
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "ui": {
    "footer": {
      "hideContextPercentage": false
    },
    "showMemoryUsage": true
  },
  "model": {
    "name": "gemini-3-flash-preview"
  }
}
